{% extends 'base.html.twig' %}

{% block title %}Edit Product
{% endblock %}

{% block body %}
	<div class="container">
		<div class="ms-2 text-secondary">
			<h3>Edit Product</h3>
		</div>
		<div class="container mt-4 text-secondary">
			<div class="row align-items-start">
				<div class="col-6">
					{{ include('product/_form.html.twig') }}
				</div>
				<div class="col-6 text-center">
					{% if product.photo is empty %}
						<h1>No photo</h1>
					{% else %}
						<img src="{{ asset('/upload/image/' ~ product.photo.name) }}" alt="error while loading photo">
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
