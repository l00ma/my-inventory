{% extends 'base.html.twig' %}

{% block title %}Edit Product
{% endblock %}

{% block body %}
	<h3>Edit Product</h3>
	<div class="container mt-4 text-secondary">
		<div class="row align-items-start">
			<div class="col-6">
				{{ include('product/_form.html.twig') }}
			</div>
			<div class="col-6 text-center">
				{% if product.photo is empty %}
					<h1>No photo</h1>
				{% else %}
					<img src="{{ asset('/images/' ~ product.photo.name) }}" alt="error while loading photo">
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
