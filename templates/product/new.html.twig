{% extends 'base.html.twig' %}
	{% block javascripts %}
		{{ parent() }}
		{{ encore_entry_script_tags('imageSave') }}
	{% endblock %}

{% block title %}Add product
{% endblock %}

{% block body %}

	<section class="container my-3">
		<div class="row">
			<div class="col">
				<div class="d-flex flex-column min-h-100 justify-content-center align-items-center">
					<div class="ms-2 text-secondary">
						<h3>Add a Product</h3>
					</div>
					<div class="col-11 col-md-8 col-lg-6">
						<div class="card">
							<div class="text-center my-2 px-1 px-auto" id="imageHeader">
								<img class="rounded img-fluid" src="{{ asset('build/images/blank_canned.jpg') }}" alt="error while loading photo" title="Click to update product image.">

							</div>
							<div class="card-body">
								{{ form_start(form) }}
								<div class="container">
									<div class="row row-cols-lg-auto">
										<div class="col-12">
											{{ form_row(form.brand) }}
										</div>
										<div class="col-12">
											{{ form_row(form.name) }}
										</div>
									</div>
									<div class="row">
										<div class="col-8 col-lg-5">
											{{ form_row(form.category) }}
										</div>
									</div>
									<div class="row">
										<div class="col-8 col-lg-5">
											{{ form_row(form.limit_date) }}
										</div>
										<div class="col-4 col-lg-2">
											{{ form_row(form.quantity) }}
										</div>
									</div>
									<div class="row">
										<div class="col-6 col-lg-4">
											{{ form_row(form.u_weight) }}
										</div>
										<div class="col-6 col-lg-4">
											{{ form_row(form.price) }}
										</div>
									</div>
									<div class="row">
										<div class="col-6 col-lg-5">
											{{ form_row(form.location) }}
										</div>
										<div class="col-12">
											{{ form_row(form.remark) }}
										</div>
									</div>
									<div class="row d-none">
										<div class="col-12">
											{{ form_row(form.image) }}
										</div>
									</div>
									<div class="row mt-3">
										<div class="col">
											<div class="d-flex align-items-center justify-content-evenly">
												{{ form_row(form.save) }}
												<a href="{{ path('app_scan') }}" class="btn btn-primary text-btn" title="Scan barCode">
													<i class="bi bi-upc-scan"></i>
												</a>
												<a href="{{ path('app_product_index') }}" class="btn btn-primary text-btn" title="Go back">
													<i class="fa-solid fa-arrow-left"></i>
												</a>
											</div>
										</div>
									</div>
									{{ form_widget(form._token) }}
									{{ form_end(form, {render_rest: false}) }}
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>


	
{% endblock %}
