{% extends 'base.html.twig' %}

{% block title %}Search Results
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="ms-2 text-secondary">
			<div class="row mt-2">
				<div class="col ms-2 text-secondary">
					{% if products|length %}
						<h4>Search results for "{{ query }}":</h4>
						<span class="badge text-bg-primary">
							{% if products|length == 1 %}
								{{ products|length }}
								item
							{% elseif products|length > 1 %}
								{{ products|length }}
								items
							{% endif %}
						</span>
						{% if report[0] != '0' %}
							<span class="badge text-bg-primary">{{ report[0] }}
								Kg</span>
						{% endif %}
						{% if report[1] != '0' %}
							<span class="badge text-bg-primary">{{ report[1] }}
								{{ app.user.currency.name }}</span>
						{% endif %}
					{% else %}
						<p>Sorry, no result found for "{{ query }}" :(</p>
						<a href="{{ path('app_product_index') }}" class="btn btn-primary" style="float: left">Back to products list</a>
					{% endif %}
				</div>
			</div>
		</div>
		{% if products|length %}
			<table class="table table-hover sortable" style="font-size:80%; width: 100%; white-space: nowrap; table-layout: fixed;">
				<thead>
					<tr>
						<th style="cursor: pointer;">Name</th>
						<th style="cursor: pointer;">Brand</th>
						<th style="cursor: pointer;">Category</th>
						<th style="cursor: pointer;">Quantity</th>
						<th style="cursor: pointer;">Expiration date</th>
						<th style="cursor: pointer;">Expiration time</th>
						<th style="cursor: pointer;">Location</th>
						<th class="no-sort">actions</th>
					</tr>
				</thead>
				<tbody>
					{% for product in products %}
						<tr {% if product.peremptionalert == '0' or product.peremptionalert == '1' %} style="background-color: {{product.peremptioncss}}" {% endif %}>
							<td style="overflow: hidden; text-overflow: ellipsis">{{ product.name }}</td>
							<td>{{ product.brand }}</td>
							<td>{{product.category.name}}</td>
							<td>{{ product.quantity }}</td>
							<td data-sort="{{ product.limitDate|date('U') }}">{{ product.limitDate|date('d/m/Y') }}</td>
							<td data-sort="{{ product.limitDate|date('U') }}">
								{% if product.peremptiontime < 0 %}
									expired
									{{ product.peremptiontime|abs }}
									days ago
								{% else %}
									{{ product.peremptiontime }}
									days left
								{% endif %}
							</td>
							<td>{{ product.location }}</td>
							<td>
								<a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-primary btn-sm">show</a>
								<a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary btn-sm">edit</a>
								<a href="{{ path('app_product_new', {'id': product.id}) }}" class="btn btn-primary btn-sm">clone</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<script src="{{ asset('js/sortable.min.js') }}"></script>
		{% endif %}
	</div>
{% endblock %}
