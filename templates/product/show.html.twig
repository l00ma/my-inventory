{% extends 'base.html.twig' %}

{% block title %}Product detail
{% endblock %}

{% block body %}
	<div class="container">
		<div class="ms-2 text-secondary">
			<h3>Product Details</h3>
		</div>
		<div class="container mt-4 text-secondary">
			<div class="row align-items-start">
				<div class="col-6">
					<table class="table">
						<tbody>
							<tr>
								<th>Category</th>
								<td>{{ product.category.name }}</td>
							</tr>
							<tr>
								<th>Name</th>
								<td>{{ product.name }}</td>
							</tr>
							<tr>
								<th>Brand</th>
								<td>{{ product.brand }}</td>
							</tr>
							<tr>
								<th>Unit weight (Kg)</th>
								<td>{{ product.uWeight / 1000 }}</td>
							</tr>
							<tr>
								<th>Price ({{ app.user.currency.name }})</th>
								<td>{{ product.price / 100 }}</td>
							</tr>
							<tr>
								<th>Quantity</th>
								<td>{{ product.quantity }}</td>
							</tr>
							<tr>
								<th>Peremption date</th>
								<td>{{ product.limitDate ? product.limitDate|date('d/m/Y') : '' }}</td>
							</tr>
							<tr>
								<th>Location</th>
								<td>{{ product.location }}</td>
							</tr>
							<tr>
								<th>Remark</th>
								<td>{{ product.remark }}</td>
							</tr>
						</tbody>
					</table>
					<div class="d-flex align-items-center justify-content-evenly">
						<a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary text-btn" title="Edit this product"><i class="bi bi-pencil"></i></a>
						{{ include('product/_delete_form.html.twig') }}
						<a href="{{ path('app_product_index') }}" class="btn btn-primary text-btn" title="Go back"><i class="fa-solid fa-arrow-left"></i></a>
					</div>
				</div>
				<div class="col-6 text-center">
					{% if product.photo is empty %}
						<h1>No photo</h1>
					{% else %}
						<img src="{{ asset('build/upload/image/' ~ product.photo.name) }}" alt="error while loading photo">
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
