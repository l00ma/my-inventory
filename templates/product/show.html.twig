{% extends 'base.html.twig' %}

{% block title %}My stuff - Detail
{% endblock %}

{% block body %}
	<h3>Product Details</h3>

	<table class="table">
		<tbody>
			<tr>
				<th>Name</th>
				<td>{{ product.name }}</td>
			</tr>
			<tr>
				<th>Brand</th>
				<td>{{ product.brand }}</td>
			</tr>
			<tr>
				<th>Unit weight</th>
				<td>{{ product.uWeight }}</td>
			</tr>
			<tr>
				<th>Price</th>
				<td>{{ product.price }}</td>
			</tr>
			<tr>
				<th>Quantity</th>
				<td>{{ product.quantity }}</td>
			</tr>
			<tr>
				<th>Peremption date</th>
				<td>{{ product.limitDate ? product.limitDate|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Location</th>
				<td>{{ product.location }}</td>
			</tr>
			<tr>
				<th>Remark</th>
				<td>{{ product.remark }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_product_index') }}">back to list</a>

	<a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

	{{ include('product/_delete_form.html.twig') }}
{% endblock %}
