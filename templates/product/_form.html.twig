{{ form_start(form) }}
<div class="container">
	<div class="row g-3">
		<div class="col-3">
			{{ form_row(form.category) }}
		</div>
	</div>
	<div class="row row-cols-lg-auto g-3 align-items-center">
		<div class="col-6">
			{{ form_row(form.brand) }}
		</div>
		<div class="col-6">
			{{ form_row(form.name) }}
		</div>
	</div>
	<div class="row g-3 align-items-center">
		<div class="col-2">
			{{ form_row(form.quantity) }}
		</div>
		<div class="col-2">
			{{ form_row(form.price) }}
		</div>
		<div class="col-2">
			{{ form_row(form.u_weight) }}
		</div>
		<div class="col-3">
			{{ form_row(form.limit_date) }}
		</div>
	</div>
	<div class="row g-3 align-items-center">
		<div class="col-3">
			{{ form_row(form.location) }}
		</div>
		<div class="col-8">
			{{ form_row(form.remark) }}
		</div>
	</div>
	<div class="row row-cols-lg-auto g-3 align-items-center">
		<div class="col-3 mb-2">
			{{ form_row(form.photo) }}
		</div>
	</div>
	<div class="row row-cols-lg-auto g-3 align-items-center">
		<div class="col-3">
			<button class="btn btn-primary">{{ button_label|default('Save') }}</button>
		</div>
	</div>
</div>
{{ form_end(form) }}
