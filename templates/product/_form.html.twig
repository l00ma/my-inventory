{{ form_start(form) }}
<div class="container">
	<div class="row row-cols-lg-auto">
		<div class="col-12">
			{{ form_row(form.brand) }}
		</div>
		<div class="col-12">
			{{ form_row(form.name) }}
		</div>
	</div>
	<div class="row">
		<div class="col-8 col-lg-5">
			{{ form_row(form.category) }}
		</div>
	</div>
	<div class="row">
		<div class="col-8 col-lg-5">
			{{ form_row(form.limit_date) }}
		</div>
		<div class="col-4 col-lg-2">
			{{ form_row(form.quantity) }}
		</div>
	</div>
	<div class="row">
		<div class="col-6 col-lg-4">
			{{ form_row(form.u_weight) }}
		</div>
		<div class="col-6 col-lg-4">
			{{ form_row(form.price) }}
		</div>
	</div>
	<div class="row">
		<div class="col-6 col-lg-5">
			{{ form_row(form.location) }}
		</div>
		<div class="col-12">
			{{ form_row(form.remark) }}
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			{{ form_row(form.image) }}
		</div>
	</div>
	<div class="row mt-3">
		<div class="col">
			<div class="d-flex justify-content-evenly">
				{{ form_row(form.save) }}
				{{ form_row(form.delete) }}
				{{ form_row(form.back) }}
			</div>
		</div>
	</div>
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
</div>
{{ form_end(form) }}
