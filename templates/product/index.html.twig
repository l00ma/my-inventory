{% extends 'base.html.twig' %}

{% block title %}My stuff
{% endblock %}

{% block body %}
	<h3>My products</h3>

	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Brand</th>
				<th>Unit weight</th>
				<th>Price ({{ app.user.currency.name }})</th>
				<th>Quantity</th>
				<th>Peremption date</th>
				<th>Location</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for product in app.user.products %}
				<tr>
					<td>{{ product.name }}</td>
					<td>{{ product.brand }}</td>
					<td>{{ product.uWeight }}</td>
					<td>{{ product.price }}</td>
					<td>{{ product.quantity }}</td>
					<td>{{ product.limitDate ? product.limitDate|date('d/m/Y') : '' }}</td>
					<td>{{ product.location }}</td>
					<td>
						<a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-primary">show</a>
						<a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="10">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<a href="{{ path('app_product_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
