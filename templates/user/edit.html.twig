{% extends 'base.html.twig' %}
{% block title %}Edit credentials
{% endblock %}

{% block body%}
	{% for category, messages in app.flashes %}
		{% for message in messages %}
			<div class="alert alert-{{ category }}" id="alertMsg">
				{{ message }}
			</div>
		{% endfor %}
	{% endfor %}
	<section class="container my-3">
		<div class="row">
			<div class="col">
				<div class="d-flex flex-column min-h-100 justify-content-center align-items-center">
					<div class="ms-2 text-secondary">
						<h3>Change credentials</h2>
					</div>
					<div class="col-10 col-md-7 col-lg-5">
						{{ include('user/_form.html.twig') }}
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
