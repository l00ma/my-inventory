{% extends 'base.html.twig' %}

{% block title %}Reset password
{% endblock %}

{% block body %}
	<section class="container my-3">
		<div class="row">
			<div class="d-flex flex-column min-h-100 justify-content-center align-items-center">
				<h3 class="h3 mb-3 font-weight-normal text-secondary">Enter your new password</h3>
				<div class="col-md-2 text-secondary">
					{{ form_start(passForm) }}
					{{ form_row(passForm.password) }}
				</div>
				<button type="submit" class="btn btn-primary mt-2">Send</button>
				{{ form_end(passForm) }}
			</div>
		</div>
	</section>

{% endblock %}
